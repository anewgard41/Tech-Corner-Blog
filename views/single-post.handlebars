<div>
    <h2>
        {{post.title}}
    </h2>
    <div>
        Posted by:
        {{post.User.username}}
    </div>
</div>
<div>
    {{#if post.Comments}}
    <h3>Comments</h3>
    {{#each post.Comments}}
    <div>
        <p>{{content}}</p>
        <p>{{User.username}}</p>
    </div>
    {{/each}}
    {{/if}}
    {{!-- Comment Text area --}}
    <input type="hidden" name="post-id" value="{{post.id}}"/>   
    <form class="new-comment-form">
        <textarea name="comment-content">Comment:</textarea>
        <button type="submit">Add Comment</button>
    </form>

</div>

<script src="/js/comment.js"></script>


<div>
    <h2>
        {{post.title}}
    </h2>
    <div>
        Posted by:
        {{post.User.username}}
    </div>
</div>
<div>
    {{#if post.Comments}}
    <h3>Comments</h3>
    {{#each post.Comments}}
    <div>
        <p>{{body}}</p>
        <p>{{User.username}}</p>
    </div>
    {{/each}}
    {{/if}}

    <form action="/comment/{{post.id}}" method="POST">
        <textarea name="body">Comment:</textarea>
        <button type="submit">Add Comment</button>
    </form>

</div>

<script src="/public/js/comment.js"></script>

